extends ../layouts/common

block content
	h1 login

	if errors
		each error in errors
			.alert.alert-danger=error

	form(action="/auth/login", method="POST")
		.form-group
			label(for="email") Email
			input#email.form-control(type="text", name="email", value=values ? values.email : "")
		//- button.btn.btn-primary Create
		.form-group
			label(for="pass") Pass
			input#pass.form-control(type="text", name="pass")
		button.btn.btn-primary Login
