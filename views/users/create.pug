extends ../layouts/common

block content
	h1 create user

	if errors
		each error in errors
			.alert.alert-danger=error

	form(action="/users/create", method="POST", enctype="multipart/form-data")
		.form-group
			label(for="name") Name
			input#name.form-control(type="text", name="name", value=values ? values.name : "")
		//- button.btn.btn-primary Create
		.form-group
			label(for="age") Age
			input#age.form-control(type="text", name="age")
		.form-group
			label(for="avatar") Avatar
			input#avatar.form-file(type="file", name="avatar")
		button.btn.btn-primary Create
